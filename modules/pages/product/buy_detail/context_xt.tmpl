{{if isQuota}}
<p class="pro_tips recharge-btn">每人累计最多可购买{{buyMaxMoney}}元，您还可购买{{buyedMoney}}元</p>
{{/if}}
<ul class="manage-list buy-list manage-b">
	<li class="clearfix">
		<label class="inp-tit">购买份数</label>
		<div class="buy-part bg-on">
			<span class="preva" id="btn-prev"></span>
			<input class="buy-num" id="txt-copies" type="tel" maxlength="3" value="{{copies}}" />
			<span class="nexta" id="btn-next"></span>
		</div>
	</li>
	<li class="clearfix">
		<label class="inp-tit">合计金额</label>
		<div class="red_num"><span id="span-money">{{copiesAmount}}</span>元</div>
	</li>	
</ul>
<p class="pro_tips recharge-btn">您的账户余额为{{ableBalance}}元<a href="javascript:void(0);" id="btn-recharge">充值</a></p>

<ul class="manage-list buy-list manage-b">
	<li class="clearfix">
		<a href="javascript:void(0);" id="btn-packet" class="clearfix">
			<label class="inp-tit">使用红包</label>
			{{if redPakNum == 0}}
				<div class="red_num red_num_right" id="div-redNumber">暂无可用</div>
			{{else}}
				<div class="red_num red_num_right" id="div-redNumber">未使用</div>
			{{/if}}
		</a>
	</li>
</ul>

{{if isVip || awardRateSetting.length > 0 }}
	<p class="pro_tips recharge-btn">预期总收益<span id="invest-num">0</span>元<a href="javascript:void(0);" id="btn-earnings">详情</a></p>
{{else}}
	<p class="pro_tips recharge-btn">预期总收益<span id="invest-num">0</span>元</p>
{{/if}}

<div class="operate">
	<a class="oper-btn" href="javascript:void(0);" id="btn-submit">购买</a>
</div>
<div class="servive-pact">
	<span class="pact-ico pact-draw pact-on btn-pact" data-state="1"></span>
	<a href="{{equityUrl}}">产品协议</a>				
</div>
